package com.labour.laburservice.service;

import java.util.ArrayList;
import java.util.List;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Service;

import com.labour.laburservice.entity.Labour;
import com.labour.laburservice.repo.labourRepo;

@Service
public class LabourServic {
	@Autowired
	labourRepo LabourRepo;
	
	public List<Labour> getAllLabour(){
		
		return  LabourRepo.findAll();
	}
	
	public Labour getLabourById(int id) {
		return LabourRepo.findById(id).get();
	}
	  
	public void saveOrUpdate(Labour labours) {
		
		LabourRepo.save(labours);
	}
public void deleteLabour(int id) {
	LabourRepo.deleteById(id);
	}  
	public void update(Labour labors,int labourid) {
		
		LabourRepo.save(labors);
	}
	 

}
