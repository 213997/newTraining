package com.labour.laburservice.controller;

import java.util.List;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.RestController;

import com.labour.laburservice.entity.Labour;
import com.labour.laburservice.service.LabourServic;

@RestController
@RequestMapping("/api/labour")
public class labourcontroller {
	
	@Autowired
	LabourServic labourservice;
	
	@GetMapping("/labours")
	public List<Labour> getAllLabour(){
		
		return  labourservice.getAllLabour();
	}

}
